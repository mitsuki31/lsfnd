{
  "name": "lsfnd",
  "version": "1.2.0",
  "title": "LSFND",
  "description": "A lightweight Node.js library to list files and directories with a simple and efficient way",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/**/*",
    "types/index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./lsfnd": "./dist/lsfnd.js",
    "./sync": "./dist/lsfnd-sync.js",
    "./types": "./types/index.d.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsx scripts/build.ts",
    "build": "tsx scripts/build.ts --minify",
    "postbuild": "tsx scripts/postbuild.ts",
    "docs": "npm run-script build:docs",
    "build:docs": "typedoc --options typedoc.config.js",
    "test": "npm run test:cjs && npm run test:mjs",
    "test:cjs": "node test/lsfnd.spec.cjs && node test/lsfnd-sync.spec.cjs",
    "test:mjs": "node test/lsfnd.spec.mjs && node test/lsfnd-sync.spec.mjs",
    "prepublishOnly": "npm run build",
    "prepack": "npm test && npm pkg delete devDependencies peerDependencies"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitsuki31/lsfnd.git"
  },
  "author": "Ryuu Mitsuki <dhefam31@gmail.com> (https://github.com/mitsuki31)",
  "contributors": [
    "Ryuu Mitsuki <dhefam31@gmail.com> (https://github.com/mitsuki31)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mitsuki31/lsfnd/issues"
  },
  "homepage": "https://mitsuki31.github.io/lsfnd",
  "funding": {
    "type": "individual",
    "url": "https://ko-fi.com/dhefam31"
  },
  "engines": {
    "node": ">=16.20.x"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "esbuild": "^0.27.1",
    "tsx": "^4.21.0",
    "typedoc-material-theme": "^1.0.2",
    "typedoc-plugin-extras": "^3.0.0",
    "typescript": "~5.4.3"
  },
  "peerDependencies": {
    "typedoc": "^0.25.12"
  },
  "keywords": [
    "ls",
    "list",
    "javascript",
    "typescript",
    "node",
    "nodejs",
    "library"
  ]
}
